generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum userRole {
  ADMIN
  USER
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String?
  password   String
  role       userRole @default(USER)
  createdAt  DateTime @default(now())
  updatedAT  DateTime @updatedAt
  subscribed Boolean  @default(false)
}

enum ProductTypes {
  ThirdParty
  PCD
}

model Product {
  id          String       @id @default(uuid())
  name        String
  description String?
  price       Float?
  type        ProductTypes
  clicks      Int          @default(0)
  createdAt   DateTime     @default(now())
  image       String  
  thumbnail   String?
}


