generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum userRole {
  ADMIN
  USER
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String?
  password   String
  role       userRole @default(USER)
  createdAt  DateTime @default(now())
  updatedAT  DateTime @updatedAt
  subscribed Boolean  @default(false)
  provider   String   @default("app-auth")
}


enum ProductTypes {
  TABLET
  SYRUP
  CAPSULE
  INJECTION
  OINTMENT
  DROPS
  OTHER
}

enum ProductCatType {
  PCD
  THIRDPARTY
}

model Product {
  id            String       @id @default(uuid())
  name          String
  description   String?      // Detailed info about the product
  price         Float?       // Selling price
  ProductType   ProductTypes // Enum for structured type
  type          ProductCatType       // Optional: custom type or brand-specific info add pcd or third-party keep spelling same
  clicks        Int          @default(0) // Track popularity
  stock         Int?         // Optional: inventory count
  isActive      Boolean      @default(true) // Soft delete or availability flag
  category      String?      // Optional: medicine category e.g., "Painkiller"
  ingredients   String?      // Optional: list of active ingredients
  manufacturer  String?      // Optional: manufacturer name
  expiryDate    DateTime?    // Optional: expiry date
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  image         String       // Main image URL (from ImageKit)
  thumbnail     String?      // Optional: smaller image
  rating        Float?       // Optional: average rating
  reviewsCount  Int?         // Optional: number of reviews
}

model Testimonials {
  id  String @id @default(uuid())
  name String 
  email String 
  message String 
}